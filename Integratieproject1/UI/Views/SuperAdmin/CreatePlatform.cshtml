@using Integratieproject1.Domain.Projects
@model Platform

@{
    ViewBag.Title = "SuperAdminPage";
    Layout = "/UI/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>New Platform</h2>
    <div>
        <form asp-controller="SuperAdmin" asp-action="CreatePlatform" method="post">
            <label asp-for="PlatformName"></label>
            <input required asp-for="PlatformName" class="form-control" />
            <label asp-for="Logo" value="Logo url"></label>
            <input asp-for="Logo" type="url" class="form-control" />
            <label asp-for="Header"></label>
            <input required asp-for="Header" class="form-control" />
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <label asp-for="Phonenumber"></label>
            <input asp-for="Phonenumber" class="form-control" />
            <input type="submit" value="Create Platform">
        </form>

    </div>
</div>