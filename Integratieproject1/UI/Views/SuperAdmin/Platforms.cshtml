@model IList<Integratieproject1.Domain.Projects.Platform>

@{
    ViewBag.Title = "SuperAdminPagina";
    Layout = "/UI/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Alle Platformen</h2>
    <form asp-action="Platforms" method="get">
        <div class="form-actions no-color">
            <p>
                Filter: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
                <input type="submit" value="Zoeken" class="btn btn-primary" /> |
                <a asp-action="Platforms">Terug naar volledige lijst</a>
            </p>
        </div>
    </form>
    <div>
        <table class="table">
            <tr>
                <th>
                    <a asp-action="Platforms" asp-route-sortOrder="@ViewData["IdSortParm"]">Id</a>
                </th>
                <th>
                    <a asp-action="Platforms" asp-route-sortOrder="@ViewData["NameSortParm"]">Naam</a>
                </th>
            </tr>
            @foreach (var platform in Model)
            {
                <tr>
                    <td>@platform.PlatformId</td>
                    <td>@platform.PlatformName</td>
                    <td>
                        <a asp-area="" asp-controller="SuperAdmin"
                           asp-action="EditPlatform" asp-route-platformId="@platform.PlatformId">
                            Wijzig
                        </a>
                    </td>
                    <td>
                        <a asp-area="" asp-controller="SuperAdmin"
                           asp-action="EditLayout" asp-route-platformId="@platform.PlatformId">
                            Layout
                        </a>
                    </td>
                    <td>
                        <a asp-area="" asp-controller="SuperAdmin"
                           asp-action="DeletePlatform" asp-route-platformId="@platform.PlatformId">
                            Verwijder
                        </a>
                    </td>
                </tr>
            }
        </table>
        <a class="btn btn-primary" asp-area="" asp-controller="SuperAdmin"
           asp-action="CreatePlatform">
            Nieuw Platform
        </a>
    </div>
</div>