@model IList<Integratieproject1.Domain.Users.CustomUser>

@{
    ViewBag.Title = "SuperAdminPagina";
    Layout = "/UI/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Mijn gebruikers</h2>
    <div>
        <table class="table">
            <tr>
                <th>Gebruikersnaam</th>
                <th>Email</th>
                <th>Telefoonnummer</th>
            </tr>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td><a asp-area="" asp-controller="SuperAdmin"
                           asp-action="GiveAdminRole" asp-route-userId="@user.Id">Voeg Adminrol Toe
                    </a></td>
                    <td><a asp-area="" asp-controller="SuperAdmin"
                           asp-action="DeleteUser" asp-route-userId="@user.Id">Verwijder Account
                    </a></td>      
                </tr>
            }
        </table>
    </div>
</div>