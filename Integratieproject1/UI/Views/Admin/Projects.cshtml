@using Integratieproject1.Domain.Projects
@model IList<Integratieproject1.Domain.Projects.Project>

@{
    ViewBag.Title = "Admin";
    Layout = "/UI/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Mijn Projecten</h2>
    <div>
        <table class="table">
            <tr>
                <th>Naam</th>
                <th>Beschrijving</th>
                <th>Startdatum</th>
                <th>Einddatum</th>
                <th>Locatie</th>
            </tr>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.ProjectName</td>
                    <td>@project.Description</td>
                    <td>@project.StartDate</td>
                    <td>@project.EndDate</td>
                    <td>@project.Location.LocationName</td>
                    <td><a asp-area="" asp-controller="Admin"
                           asp-action="Phases" asp-route-projectId="@project.ProjectId">Bekijk Fases
                    </a></td>
                    <td><a asp-area="" asp-controller="Admin"
                           asp-action="EditProject" asp-route-projectId="@project.ProjectId">Wijzig
                    </a></td>
                </tr>
            }
        </table>
        <a class="btn btn-primary" asp-area="" asp-controller="Admin"
           asp-action="CreateProject" asp-route-userId="3">Maak Project
        </a>
    </div>
</div>

