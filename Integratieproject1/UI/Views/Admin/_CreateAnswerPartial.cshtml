@using Integratieproject1.Domain.Projects
@using Integratieproject1.Domain.Surveys
@model Answer

@{
    ViewBag.Title = "AddQuestionPage";
}

<div>
    <form asp-controller="Admin" asp-action="AddAnswer" asp-route-questionId="@Model.Question.QuestionId" asp-route-surveyId="@ViewBag.SurveyId" method="post">
        <label asp-for="AnswerText"></label>
        <input required asp-for="AnswerText" class="form-control"/>
        <input type="submit" value="Add Answer">
    </form>
    
</div>