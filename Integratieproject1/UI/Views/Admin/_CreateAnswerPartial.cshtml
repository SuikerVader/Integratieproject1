@using Integratieproject1.Domain.Projects
@using Integratieproject1.Domain.Surveys
@model Answer

@{
    ViewBag.Title = "AddQuestionPage";
}

<div>
    <form class="form-inline" asp-controller="Admin" asp-action="AddAnswer" asp-route-questionId="@Model.Question.QuestionId" asp-route-surveyId="@ViewBag.SurveyId" method="post">
        <input required asp-for="AnswerText" class="form-control" placeholder="Answer text ..."/>
        <input class="btn btn-outline-primary btn-sm" type="submit" value="Add Answer">
    </form>
    
</div>