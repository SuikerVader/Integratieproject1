@model IList<Integratieproject1.Domain.Surveys.Survey>

@{
    ViewBag.Title = "Admin";
    Layout = "/UI/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Vragenlijsten</h2>
    <form asp-action="SurveyResults" method="get">
        <div class="form-actions no-color">
            <p>
                Filter: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
                <input type="submit" value="Zoeken" class="btn btn-primary" /> |
                <a asp-action="SurveyResults">Terug naar volledige lijst</a>
            </p>
        </div>
    </form>
    <div>
        <table class="table">
            <tr>
                <th>
                    <a asp-action="SurveyResults" asp-route-sortOrder="@ViewData["NameSortParm"]">Titel</a>
                </th>
            </tr>
            @foreach (var survey in Model)
            {
                <tr>
                    <td>@survey.Title</td>
                    <td>
                        <a asp-area="" asp-controller="Admin"
                           asp-action="SurveyResults" asp-route-surveyId="@survey.SurveyId">
                            Bekijk Resultaten
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>