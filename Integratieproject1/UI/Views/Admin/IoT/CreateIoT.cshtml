@using Integratieproject1.Domain.Datatypes
@using Integratieproject1.Domain.Ideations
@using Integratieproject1.Domain.Projects
@using Integratieproject1.Domain.Surveys
@model IList<Integratieproject1.Domain.Projects.Project>


@{
    ViewBag.Title = "IoT-opstelling ";
    Layout = "/UI/Views/Shared/_Layout.cshtml";
}

<div class="container">
<div class="text-center" style="padding: 30px">
    <h3>Gelieve een project te kiezen waarop u een IoT-opstelling wenst aan te maken</h3>
    <div>Indien u kiest om via een idee een opstelling te maken, kan men hierop stemmen om steun te uiten,
        indien u kiest voor een vraag, dan kan deze, multiple choice, vraag beantwoorden mits voldoende knoppen.</div>
    @*TODO herschrijven*@
    <table class="table">
    <tr>
    <th>ProjectNaam</th>
    <th>opstelling op basis van een idee</th>
    <th>opstelling op basis van een vraag</th>
    </tr>
    @foreach (var project in Model)
    {
        <tr>
            <td>@project.ProjectName</td>
            <td>
                <a asp-area="" asp-controller="Admin"
                   asp-action="IoTChoice" asp-route-projectId="@project.ProjectId" asp-route-choice="1">
                    idee&euml;n bekijken
                </a>
            </td>
            <td>
                <a asp-area="" asp-controller="Admin"
                   asp-action="IoTChoice" asp-route-projectId="@project.ProjectId" asp-route-choice="2">
                    vragen bekijken
                </a>
            </td>
        </tr>
    }
    </table>
</div>
</div>