@using Integratieproject1.Domain.Projects
@using Integratieproject1.Domain.Surveys
@model Integratieproject1.Domain.Surveys.Question

@{
    ViewBag.Title = "EditQuestionPage";
}

<div>
    <form class="form-inline" asp-controller="Admin" asp-action="EditQuestion" asp-route-questionId="@Model.QuestionId" asp-route-surveyId="@ViewBag.SurveyId" method="post">
        <input required asp-for="QuestionText" value="@Model.QuestionText" class="form-control"/>
        <select class="form-control" asp-for="QuestionType" asp-items="Html.GetEnumSelectList<QuestionType>()">
        </select>
        <input class="btn btn-primary btn-sm" type="submit" value="Edit Question">
        <a class="btn btn-danger btn-sm" asp-area="" asp-controller="Admin"
           asp-action="DeleteQuestion" asp-route-questionId="@Model.QuestionId" asp-route-surveyId="@ViewBag.SurveyId">Delete question
        </a>
    </form>
    
    
</div>