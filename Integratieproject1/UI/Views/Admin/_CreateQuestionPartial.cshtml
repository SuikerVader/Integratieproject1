@using Integratieproject1.Domain.Projects
@using Integratieproject1.Domain.Surveys
@model Integratieproject1.Domain.Surveys.Question

@{
    ViewBag.Title = "AddQuestionPage";
}

<div>
    <form asp-controller="Admin" asp-action="AddQuestion" asp-route-surveyId="@ViewBag.SurveyId" method="post">
        <label asp-for="QuestionText"></label>
        <input required asp-for="QuestionText" class="form-control"/>
        <select asp-for="QuestionType" asp-items="Html.GetEnumSelectList<QuestionType>()">
        </select>
        <input type="submit" value="Add Question">
    </form>
    
</div>