<button onclick="showHideCreateIdea()">post idea</button>
<div id="idea" style="display: none">
    @await Html.PartialAsync("_PostIdeaPartial.cshtml", new Idea())
</div>

<script>
    function showHideCreateIdea() {
        var x = document.getElementById('idea');
        if (x.style.display === 'none') {
            x.style.display = 'inline-block';
        } else {
            x.style.display = 'none';
        }
    }
</script>