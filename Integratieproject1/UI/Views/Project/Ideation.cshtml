@using Integratieproject1.Domain.Ideations
@model Integratieproject1.Domain.Ideations.Ideation

@{
    ViewBag.Title = "ideationPage";
    ViewBag.ideationId = Model.IdeationId;
    Layout = "/UI/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="card text-center">
        <div class="card-body">
            <h5 class="card-title">@Model.CentralQuestion</h5>
            <a class="btn btn-primary" onclick="showHideCreateIdea()">
                Give your idea!
            </a>
        </div>
    </div>
    <div id="idea" style="display: none">
        @await Html.PartialAsync("_PostIdeaPartial.cshtml", new Idea())
    </div>
<div class="d-flex flex-row justify-content-around">
    @foreach (var idea in Model.Ideas)
    {
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">@idea.Title</h5>
                <a class="btn btn-primary" onclick="showHideCreateIdea()">
                    Give your idea!
                </a>
            </div>
        </div>
        <div>
            <h3>@idea.Title</h3>
            <a asp-area="" asp-controller="Project"
               asp-action="Idea" asp-route-ideaId="@idea.IdeaId">
                <button>view idea</button>
            </a>
        </div>
    }
</div>


</div>
<script>
    function showHideCreateIdea() {
        var x = document.getElementById('idea');
        if (x.style.display === 'none') {
            x.style.display = 'inline-block';
        } else {
            x.style.display = 'none';
        }
    }
</script>